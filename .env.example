# Environment variables template for Railway deployment

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
ADMIN_ID=your_telegram_user_id

# Database (automatically set by Railway when you add PostgreSQL service)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Application Settings
DEVELOPMENT_MODE=false
ALLOWED_USERS=user_id_1,user_id_2

# External API Keys
RAPIRA_API_URL=https://api.rapira.net
RAPIRA_API_KEY=your_rapira_api_key

TRON_API_URL=https://api.trongrid.io
TRONSCAN_API_URL=https://apilist.tronscanapi.com

SAFECHECK_API_URL=https://ru.safecheck.online/api
SAFECHECK_API_KEY=your_safecheck_api_key
SAFECHECK_USER_ID=your_user_id